{
	"name": "lgbtq-css-ws",
	"private": true,
	"workspaces": [
		"lgbtq",
		"docs"
	],
	"devDependencies": {
		"husky": "^8.0.1",
		"prettier": "^2.8.8",
		"pretty-quick": "^3.1.2",
		"turbo": "^1.10.2"
	},
	"scripts": {
		"prepare": "husky install",
		"build": "turbo build",
		"dev": "turbo dev --no-cache --parallel --continue",
		"lint": "turbo lint",
		"format": "pretty-quick --staged"
	},
	"prettier": {
		"printWidth": 85,
		"singleQuote": false,
		"tabWidth": 2,
		"useTabs": true,
		"bracketSpacing": true
	}
}
