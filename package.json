{
	"name": "lgbtq-css-ws",
	"private": true,
	"workspaces": [
		"lgbtq",
		"docs"
	],
	"devDependencies": {
		"prettier": "^2.7.1",
		"turbo": "^1.5.5"
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev --no-cache --parallel --continue",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"prettier": {
		"printWidth": 85,
		"singleQuote": false,
		"tabWidth": 2,
		"useTabs": true,
		"bracketSpacing": true
	}
}
